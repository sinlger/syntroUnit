---
import OptimizedImage from "../../layouts/utilities/OptimizedImage.astro";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../../i18n/utils";
import { Calculator } from "lucide-astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<footer class="bg-background border-t border-border text-muted-foreground py-12 mt-20">
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-8"
  >
    <div class="flex items-center gap-2">
      <div class="bg-primary p-1.5 rounded text-primary-foreground">
        <Calculator class="w-4 h-4" />
      </div>
      <span class="text-foreground font-bold tracking-wider">UniConvert</span>
    </div>
    <div class="text-sm">&copy; 2024 UniConvert. 让换算变得更简单。</div>
    <div class="flex gap-6">
      <a href="#" class="hover:text-foreground transition">隐私政策</a>
      <a href="#" class="hover:text-foreground transition">服务条款</a>
      <a href="#" class="hover:text-foreground transition">联系我们</a>
    </div>
  </div>
</footer>
