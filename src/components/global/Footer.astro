---
import {
  getLangFromUrl,
  useTranslations,
} from "../../i18n/utils";
import { Calculator } from "lucide-astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-background border-t border-border text-muted-foreground py-12 mt-20">
  <div
    class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-8"
  >
    <div class="flex items-center gap-2">
      <div class="bg-primary p-1.5 rounded text-primary-foreground">
        <Calculator class="w-4 h-4" />
      </div>
      <span class="text-foreground font-bold tracking-wider">UniConvert</span>
    </div>
    <div class="text-sm">{t('footer.copyright')}</div>
    <div class="flex gap-6">
      <a href="#" class="hover:text-foreground transition">{t('footer.privacy_policy')}</a>
      <a href="#" class="hover:text-foreground transition">{t('footer.terms_of_service')}</a>
      <a href="#" class="hover:text-foreground transition">{t('footer.contact_us')}</a>
    </div>
  </div>
</footer>
