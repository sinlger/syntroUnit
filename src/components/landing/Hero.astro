---
import OptimizedImage from "../../layouts/utilities/OptimizedImage.astro";
import {
  Ruler,
  ArrowRight,
  Weight,
  Maximize,
  CircleDot,
  Thermometer,
  Box,
  HardDrive,
  Clock,
  Zap,
  ShieldCheck,
  Smartphone
} from 'lucide-astro';
import {
  getLangFromUrl,
  useTranslations
} from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentLocale = Astro.currentLocale ?? "en";
---
<!-- 主体内容 -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- 头部标题 -->
        <div class="text-center mb-16">
            <h1 class="text-4xl md:text-5xl font-extrabold text-foreground mb-4 tracking-tight">
                {t('hero.title')}
            </h1>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
                {t('hero.subtitle')}
            </p>
        </div>

        <!-- 单位分类网格 -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            
            <!-- 长度换算 -->
            <a href={`/${currentLocale}/length`} class="group bg-card p-8 rounded-2xl shadow-sm border border-border hover:shadow-xl hover:border-primary transition-all duration-300">
                <div class="w-12 h-12 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                    <Ruler class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-2 text-foreground">{t('hero.units.length.title')}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed mb-4">{t('hero.units.length.description')}</p>
                <span class="text-blue-600 dark:text-blue-400 text-sm font-semibold flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    {t('hero.enter_conversion')} <ArrowRight class="w-4 h-4" />
                </span>
            </a>

            <!-- 重量换算 -->
            <a href={`/${currentLocale}/weight`} class="group bg-card p-8 rounded-2xl shadow-sm border border-border hover:shadow-xl hover:border-primary transition-all duration-300">
                <div class="w-12 h-12 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 rounded-xl flex items-center justify-center mb-6 group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                    <Weight class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-2 text-foreground">{t('hero.units.weight.title')}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed mb-4">{t('hero.units.weight.description')}</p>
                <span class="text-indigo-600 dark:text-indigo-400 text-sm font-semibold flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    {t('hero.enter_conversion')} <ArrowRight class="w-4 h-4" />
                </span>
            </a>

            <!-- 面积换算 -->
            <a href={`/${currentLocale}/area`} class="group bg-card p-8 rounded-2xl shadow-sm border border-border hover:shadow-xl hover:border-primary transition-all duration-300">
                <div class="w-12 h-12 bg-emerald-50 dark:bg-emerald-900/20 text-emerald-600 dark:text-emerald-400 rounded-xl flex items-center justify-center mb-6 group-hover:bg-emerald-600 group-hover:text-white transition-colors">
                    <Maximize class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-2 text-foreground">{t('hero.units.area.title')}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed mb-4">{t('hero.units.area.description')}</p>
                <span class="text-emerald-600 dark:text-emerald-400 text-sm font-semibold flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    {t('hero.enter_conversion')} <ArrowRight class="w-4 h-4" />
                </span>
            </a>

            <!-- 戒指尺寸换算 -->
            <a href={`/${currentLocale}/ring`} class="group bg-card p-8 rounded-2xl shadow-sm border border-border hover:shadow-xl hover:border-primary transition-all duration-300">
                <div class="w-12 h-12 bg-amber-50 dark:bg-amber-900/20 text-amber-600 dark:text-amber-400 rounded-xl flex items-center justify-center mb-6 group-hover:bg-amber-600 group-hover:text-white transition-colors">
                    <CircleDot class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-2 text-foreground">{t('hero.units.ring.title')}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed mb-4">{t('hero.units.ring.description')}</p>
                <span class="text-amber-600 dark:text-amber-400 text-sm font-semibold flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    {t('hero.enter_conversion')} <ArrowRight class="w-4 h-4" />
                </span>
            </a>

            <!-- 温度换算 -->
            <a href={`/${currentLocale}/temperature`} class="group bg-card p-8 rounded-2xl shadow-sm border border-border hover:shadow-xl hover:border-primary transition-all duration-300">
                <div class="w-12 h-12 bg-orange-50 dark:bg-orange-900/20 text-orange-600 dark:text-orange-400 rounded-xl flex items-center justify-center mb-6 group-hover:bg-orange-600 group-hover:text-white transition-colors">
                    <Thermometer class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-2 text-foreground">{t('hero.units.temperature.title')}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed mb-4">{t('hero.units.temperature.description')}</p>
                <span class="text-orange-600 dark:text-orange-400 text-sm font-semibold flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    {t('hero.enter_conversion')} <ArrowRight class="w-4 h-4" />
                </span>
            </a>

            <!-- 体积换算 -->
            <a href={`/${currentLocale}/volume`} class="group bg-card p-8 rounded-2xl shadow-sm border border-border hover:shadow-xl hover:border-primary transition-all duration-300">
                <div class="w-12 h-12 bg-cyan-50 dark:bg-cyan-900/20 text-cyan-600 dark:text-cyan-400 rounded-xl flex items-center justify-center mb-6 group-hover:bg-cyan-600 group-hover:text-white transition-colors">
                    <Box class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-2 text-foreground">{t('hero.units.volume.title')}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed mb-4">{t('hero.units.volume.description')}</p>
                <span class="text-cyan-600 dark:text-cyan-400 text-sm font-semibold flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    {t('hero.enter_conversion')} <ArrowRight class="w-4 h-4" />
                </span>
            </a>

            <!-- 数据换算 -->
            <a href={`/${currentLocale}/storage`} class="group bg-card p-8 rounded-2xl shadow-sm border border-border hover:shadow-xl hover:border-primary transition-all duration-300">
                <div class="w-12 h-12 bg-purple-50 dark:bg-purple-900/20 text-purple-600 dark:text-purple-400 rounded-xl flex items-center justify-center mb-6 group-hover:bg-purple-600 group-hover:text-white transition-colors">
                    <HardDrive class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-2 text-foreground">{t('hero.units.data.title')}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed mb-4">{t('hero.units.data.description')}</p>
                <span class="text-purple-600 dark:text-purple-400 text-sm font-semibold flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    {t('hero.enter_conversion')} <ArrowRight class="w-4 h-4" />
                </span>
            </a>

            <!-- 时间换算 -->
            <a href={`/${currentLocale}/time`} class="group bg-card p-8 rounded-2xl shadow-sm border border-border hover:shadow-xl hover:border-primary transition-all duration-300">
                <div class="w-12 h-12 bg-rose-50 dark:bg-rose-900/20 text-rose-600 dark:text-rose-400 rounded-xl flex items-center justify-center mb-6 group-hover:bg-rose-600 group-hover:text-white transition-colors">
                    <Clock class="w-6 h-6" />
                </div>
                <h3 class="text-xl font-bold mb-2 text-foreground">{t('hero.units.time.title')}</h3>
                <p class="text-muted-foreground text-sm leading-relaxed mb-4">{t('hero.units.time.description')}</p>
                <span class="text-rose-600 dark:text-rose-400 text-sm font-semibold flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    {t('hero.enter_conversion')} <ArrowRight class="w-4 h-4" />
                </span>
            </a>

        </div>

        <!-- 底部特色说明 -->
        <section class="mt-24 grid grid-cols-1 md:grid-cols-3 gap-12 border-t border-border pt-16">
            <div class="flex flex-col items-center text-center">
                <div class="text-primary mb-4">
                    <Zap class="w-8 h-8" />
                </div>
                <h4 class="font-bold text-lg mb-2 text-foreground">{t('hero.features.realtime.title')}</h4>
                <p class="text-muted-foreground text-sm">{t('hero.features.realtime.description')}</p>
            </div>
            <div class="flex flex-col items-center text-center">
                <div class="text-primary mb-4">
                    <ShieldCheck class="w-8 h-8" />
                </div>
                <h4 class="font-bold text-lg mb-2 text-foreground">{t('hero.features.precise.title')}</h4>
                <p class="text-muted-foreground text-sm">{t('hero.features.precise.description')}</p>
            </div>
            <div class="flex flex-col items-center text-center">
                <div class="text-primary mb-4">
                    <Smartphone class="w-8 h-8" />
                </div>
                <h4 class="font-bold text-lg mb-2 text-foreground">{t('hero.features.multidevice.title')}</h4>
                <p class="text-muted-foreground text-sm">{t('hero.features.multidevice.description')}</p>
            </div>
        </section>
    </main>